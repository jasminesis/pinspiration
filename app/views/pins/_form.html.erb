<div class="section">
        <%= simple_form_for @pin do |f| %>
          <div class="field">
            <div class="control">
              <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
            </div>
          </div>
        
          <div class="field">
            <div class="control">
              <%= f.input :image_url, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }  %>
            </div>
          </div>
          <div class="field">
                <label class="label">Boards</l>
                    <div class="control">
                        <div class="select">
                            <%= f.collection_select :board_id, @boards, :id, :name %>
                        </div>
                    </div>
            </div>
        
          <%= f.button :submit, 'Create new pin', class: "button is-primary" %>
        <% end %>
        </div>