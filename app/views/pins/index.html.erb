<div class="section">
	<div class="container">
		<% @pins.each do |pin| %>
		<div class="card">
			<div class="card-content">
				<div class="media">
					<div class="media-content">
						<p class="title is-4"><%= pin.title %></p>
					</div>
				</div>

				<div class="card-image">
					<figure class="image is-128x128">
						<img src="<%= pin.image_url %>" />
					</figure>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>