<section class="section">
	<div class="container">
		<nav class="level">
			<!-- Left side -->
			<div class="level-left">
				<p class="level-item">
					<strong>Actions</strong>
				</p>
			</div>
			<!-- Right side -->
			<div class="level-right">
				<p class="level-item">
				</p>
				<p class="level-item">
				</p>
			</div>
		</nav>
		<hr />
		<div class="container">
			<h1 class="title"><%= @pin.title %></h1>
			<div class="content">
				<img src="<%= @pin.image_url %>" />
			</div>
		</div>
	</div>
</section>

<section class="section comments">
	<div class="container">
		<h2 class="subtitle is-5"><strong><%= @pin.comments.count %></strong> Comments</h2>
		<%= render @pin.comments %>
		<div class="comment-form">
			<hr />
			<h3 class="subtitle is-3">Leave a reply</h3>
			<%= render 'comments/form' %>
		</div>
	</div>
</section>